{
  "name": "express-chat-monorepo",
  "private": true,
  "packageManager": "pnpm@9.12.2",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "dev:client1": "turbo run dev --filter @express-chat/client1",
    "dev:server1": "turbo run dev --filter @express-chat/server1",
    "dev:express": "pnpm --filter @express-chat/express dev",
    "dev:privateChat": "pnpm --filter @express-chat/private-chat dev"
  },
  "devDependencies": {
    "@types/node": "^20.16.5",
    "turbo": "^1.13.3"
  }
}
